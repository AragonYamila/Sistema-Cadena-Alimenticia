@using SistemaCadenaAlimenticia.Data.EF
@model List<Sucursal>
<h1>Bienvenido</h1>
<h2>Para buscar sucursales, elija una de las siguientes cadenas</h2>

<div class="d-flex">
    <form action="/CadenaAlimenticia/Sucursales" method="post">
        <div>
            <select name="IdCadena">
                @foreach (var cadena in ViewBag.Cadenas)
                {
                    <option  value="@cadena.IdCadena">@cadena.RazonSocial</option>
                }
            </select>
            <input class="btn btn-secondary" type="submit" value="Filtrar" />
        </div>
    </form>
</div>
<div>
    @if(Model.Count >0){
    <h1 class="text-center">Sucursales</h1>
    <table class="table">
        <tr>
            <th>Id Sucursal</th>
            <th>Direccion</th>
            <th>Ciudad</th>
            <th>Cadena</th>

        </tr>
        @foreach (var sucursal in Model)
        {
            <tr>
                <td>@sucursal.IdSucursal</td>
                <td>@sucursal.Direccion</td>
                <td>@sucursal.Ciudad</td>
                <td>@sucursal.IdCadenaNavigation.RazonSocial</td>

            </tr>
        }
    </table>
    }
</div>